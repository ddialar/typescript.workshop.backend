{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": 0,
    "@typescript-eslint/indent": [
      "error",
      2
    ]
  },
  "overrides": [
    {
      "files": [
        "*.graphql"
      ],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": [
        "@graphql-eslint"
      ],
      "parserOptions": {
        "operations": [
          "./src/**/*.graphql"
        ],
        "schema": "./src/infrastructure/server/graphql/schema.graphql"
      },
      "rules": {}
    }
  ]
}